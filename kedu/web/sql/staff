CREATE TABLE zipcode(
  ZIPCODE 		VARCHAR2(7),
  SIDO 			VARCHAR2(10),
  GUGUN 		VARCHAR2(30),
  DONG 			VARCHAR2(40),
  RI 			VARCHAR2(30),
  BLDG 			VARCHAR2(70),
  BUNGI 		VARCHAR2(20),
  SEQ 			VARCHAR2(6) PRIMARY KEY
);

drop table pjtskill;

create table pjtskill (
	  pjtid		varchar2(30)
	, skillno	number
);

